#!/bin/sh
set -e
chown -h -R 0:0 /home/shun/linux/tool/buildroot-2019.02.6/output/build/buildroot-fs/ext2/target
/home/shun/linux/tool/buildroot-2019.02.6/output/host/bin/makedevs -d /home/shun/linux/tool/buildroot-2019.02.6/output/build/buildroot-fs/full_devices_table.txt /home/shun/linux/tool/buildroot-2019.02.6/output/build/buildroot-fs/ext2/target
   
   	rm -f /home/shun/linux/tool/buildroot-2019.02.6/output/images/rootfs.ext2
	/home/shun/linux/tool/buildroot-2019.02.6/output/host/sbin/mkfs.ext4 -d /home/shun/linux/tool/buildroot-2019.02.6/output/build/buildroot-fs/ext2/target -r 1 -N 0 -m 5 -L "" -O ^64bit /home/shun/linux/tool/buildroot-2019.02.6/output/images/rootfs.ext2 "60M" || { ret=$?; echo "*** Maybe you need to increase the filesystem size (BR2_TARGET_ROOTFS_EXT2_SIZE)" 1>&2; exit $ret; }
